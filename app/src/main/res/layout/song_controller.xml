<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#00bcd4"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/iv_music_loop"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/loop_level_list"/>

    <ImageView android:layout_width="0dp"
        android:id="@+id/iv_music_previous"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/ic_previous"
        android:layout_height="match_parent"/>
    <ImageView android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:id="@+id/iv_music_play"
        android:paddingRight="20dp"
        android:src="@drawable/play_level_list"
        android:layout_height="match_parent"/>
    <ImageView android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="20dp"
        android:id="@+id/iv_music_next"
        android:paddingRight="20dp"
        android:src="@drawable/ic_next"
        android:layout_height="match_parent"/>
    <ImageView android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:id="@+id/iv_music_stop"
        android:src="@drawable/ic_stop"
        android:layout_height="match_parent"/>

</LinearLayout>