<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dt.anh.appdoi2h.PersonalInfomationActivity">
    <LinearLayout
        android:id="@+id/lnl_top"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
    </LinearLayout>
    <FrameLayout
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/iv_cover_ifm"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_gravity="top"
            android:scaleType="fitXY"
            android:background="@drawable/ic_hl_bay"/>
        <ImageView
            android:id="@+id/iv_back_edt"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|left"
            android:paddingTop="5dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingBottom="14dp"
            android:src="@drawable/ic_edit_arrow_left"/>
        <LinearLayout
            android:id="@+id/lnl_edit_cover"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:background="#64FFFFFF"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CHỈNH SỬA"
                android:textSize="11dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:layout_below="@id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:attr/colorBackground">
        <TextView
            android:id="@+id/tv_full_name_main_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:text="Đặng Trung Anh (Virgo Trung Anh)"
            android:layout_marginTop="90dp"
            android:textColor="#000"
            android:textSize="19sp"
            android:gravity="center"/>
        <TabHost
            android:id="@+id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipToPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#5A00bcd4"/>
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp">
                </TabWidget>
                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <LinearLayout
                        android:id="@+id/history_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">
                        <include layout="@layout/tab_layout_history_of_activity"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/profile_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="8dp">
                        <include layout="@layout/tab_layout_edit_information"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
    <FrameLayout
        android:layout_below="@id/lnl_top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_avatar_ifm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_img_doi"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/lnl_edit_avatar"
            android:layout_width="95dp"
            android:layout_height="25dp"
            android:background="#64FFFFFF"
            android:layout_gravity="bottom|right"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="CHỈNH SỬA"
                android:textSize="11dp"
                android:layout_weight="3"
                android:gravity="center"
                android:textColor="#000" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
