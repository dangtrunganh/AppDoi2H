<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.dt.anh.appdoi2h.view.ContactFragment">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:lottie_fileName="lottiefiles.com - Video Camera.json"
        app:lottie_loop="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:lottie_autoPlay="true"/>
    <com.hanks.htextview.line.LineTextView
        android:id="@+id/line_text"
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingRight="10dp"
        android:text="Liên hệ"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000"
        app:animationDuration="2000"
        app:lineColor="#1367bc"
        android:layout_gravity="center"
        app:lineWidth="4dp"/>
    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/typer_text_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Báo lỗi kỹ thuật:"
        android:gravity="left"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginStart="25dp"
        android:textStyle="normal"
        app:charIncrease="3"
        app:typerSpeed="80"/>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <com.hanks.htextview.rainbow.RainbowTextView
            android:id="@+id/rainbowTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="Đặng Trung Anh"
            android:textSize="22sp"
            android:textStyle="bold"
            app:colorSpace="150dp"
            app:colorSpeed="5dp" />

        <ImageButton
            android:id="@+id/imgbtn_gmail_dta"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:src="@drawable/gmail"
            />
        <ImageButton
            android:id="@+id/imgbtn_fb_dta"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:src="@drawable/facebook_box"
            />
    </TableRow>
    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/typer_text_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Báo lỗi thông tin:"
        android:gravity="left"
        android:layout_marginStart="25dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="normal"
        app:charIncrease="3"
        app:typerSpeed="80"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <com.hanks.htextview.rainbow.RainbowTextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Lê Trung Dũng"
            android:layout_weight="3"
            android:textSize="22sp"
            android:textStyle="bold"
            app:colorSpace="150dp"
            app:colorSpeed="5dp"/>
        <ImageButton
            android:id="@+id/imgbtn_gmail_ltd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:src="@drawable/gmail"
            />
        <ImageButton
            android:id="@+id/imgbtn_fb_ltd"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:src="@drawable/facebook_box"
            />
    </TableRow>


    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/typer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hệ thống được phát triển bới AD TEAM"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_marginTop="40dp"
        android:textColor="#000"
        android:textSize="16sp"
        android:textStyle="italic"
        app:charIncrease="3"
        app:typerSpeed="80"/>

</LinearLayout>
