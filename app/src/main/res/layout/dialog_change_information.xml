<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:minWidth="300dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border_change_information">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="CHỈNH SỬA THÔNG TIN"
        android:textSize="25dp"
        android:textColor="#00bcd4" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5A00bcd4"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Số điện thoại"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edt_phone_number_information_update"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0998999999"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#3F51B5"
            android:inputType="phone"
            android:gravity="center_vertical">
            <requestFocus/>
        </EditText>

    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5A00bcd4"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tên thay thế"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>
        <EditText
            android:id="@+id/edt_nick_name_information_update"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="pikachu98123"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#3F51B5"
            android:gravity="center_vertical">
        </EditText>
    </FrameLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5A00bcd4"/>

    <Button
        android:id="@+id/btn_update_information"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="#00bcd4"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Cập nhật"
        android:layout_marginBottom="10dp"/>

</LinearLayout>